{
    "id": "org.freedesktop.LinuxAudio.Plugins.ZPlugins",
    "runtime": "org.freedesktop.LinuxAudio.BaseExtension",
    "sdk": "org.freedesktop.Sdk//20.08",
    "runtime-version": "20.08",
    "build-extension": true,
    "appstream-compose": false,
    "branch": "20.08",
    "build-options": {
        "prefix": "/app/extensions/Plugins/ZPlugins",
        "prepend-path": "/app/extensions/Plugins/ZPlugins/bin",
        "prepend-pkg-config-path": "/app/extensions/Plugins/ZPlugins/lib/pkgconfig"
    },
    "cleanup": [
        "/lib",
        "/lib/guile",
        "/lib/lv2",
        "/lib/pkgconfig",
        "/share/guile"
    ],
    "modules": [
        {
            "name": "guile",
            "cleanup": [
                "/bin",
                "/include",
                "/lib/pkgconfig",
                "/share/aclocal",
                "/share/man",
                "/share/info",
                "*.a",
                "*.la"
            ],
            "modules": [
                {
                    "name": "boehmgc",
                    "cleanup": [
                        "/share/doc",
                        "/share/man",
                        "/include",
                        "*.so",
                        "*.la"
                    ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://github.com/ivmai/bdwgc/archive/v8.0.4.tar.gz",
                            "sha256": "661d6ed06090982520f92cb88e64bb99ba88f18b33734cc2794b5c7de086d8c1"
                        }
                    ],
                    "modules": [
                        {
                            "name": "libatomic_ops",
                            "config-opts": [
                                "--enable-shared",
                                "--disable-static"
                            ],
                            "cleanup": [
                                "/include",
                                "/share/doc",
                                "*.so"
                            ],
                            "sources": [
                                {
                                    "type": "archive",
                                    "url": "https://github.com/ivmai/libatomic_ops/releases/download/v7.6.10/libatomic_ops-7.6.10.tar.gz",
                                    "sha256": "587edf60817f56daf1e1ab38a4b3c729b8e846ff67b4f62a6157183708f099af"
                                }
                            ]
                        }
                    ]
                }
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://ftp.gnu.org/gnu/guile/guile-3.0.4.tar.xz",
                    "sha256": "6b7947dc2e3d115983846a268b8f5753c12fd5547e42fbf2b97d75a3b79f0d31"
                }
            ]
        },
        "shared-modules/linux-audio/lv2.json",
        {
            "name": "zplugins",
            "buildsystem": "meson",
            "config_opts": [
                "-Dlv2dir=/app/extensions/Plugins/ZPlugins/lv2"
            ],
            "cleanup": [
            ],
            "post_install": [
                "install -Dm644 --target-directory=${FLATPAK_DEST}/share/metainfo ../org.freedesktop.LinuxAudio.Plugins.ZPlugins.metainfo.xml",
                "appstream-compose --basename=org.freedesktop.LinuxAudio.Plugins.ZPlugins --prefix=${FLATPAK_DEST} --origin=flatpak org.freedesktop.LinuxAudio.Plugins.ZPlugins",
                "strip ${FLATPAK_DEST}/lv2/*.lv2/*.so"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://git.zrythm.org/cgit/zplugins/snapshot/zplugins-0.1.7.tar.bz2",
                    "sha256": "f31c38efa324248977ab3b3751ea8a0df062763a49e4bfa3d3b9507375d4a75c"
                },
                {
                    "type": "git",
                    "url": "https://git.zrythm.org/git/ztoolkit/",
                    "commit": "937d89387aa58120a369d19d606b3223aec5cdf8",
                    "dest": "subprojects/ztoolkit"
                },
                {
                    "type": "file",
                    "path": "org.freedesktop.LinuxAudio.Plugins.ZPlugins.metainfo.xml"
                }
            ]
        }
    ]
}
